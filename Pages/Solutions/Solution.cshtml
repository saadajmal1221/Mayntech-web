@page
@model Mayntech___Individual_Solution.Pages.SolutionModel
@{
    Layout = null;
}


<head>
    <link rel="Stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" type="text/css" />
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("#CompanyName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Solutions/Solution?handler=Complete',
                        data: { "prefix": request.term },
                        type: "GET",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("searchCompany").val(i.item.val);

                },
                minLength: 3
            });
        });


    </script>

    <script>
        setTimeout(function () {
            document.getElementById("alert").style.display = "none";
        }, 3000);

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        $(document).ready(function () {
            $('#form').submit(function () {
                $('#loader').css('visibility', 'visible');
                $('#loader').show();
                setTimeout(function () {
                    $('#loader').css('visibility', 'hidden');
                    $('#loader').hide();
                }, 25000);
            });
        });


        function myFunction() {
            var popup = document.getElementById("myPopup");
            popup.classList.toggle("show");
        }


    </script>

</head>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MaynTechnologies</title>
    <link rel="stylesheet" href="StyleSheet.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mayntech___Individual_Solution.styles.css" asp-append-version="true" />
    @*browser tab icon*@
    <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        /*hardcode the header*/
        /*the database needs the head to link its property values so we can´t use the shared header*/

        .header {
            height: 54px;
        }

        .header:hover {
            box-shadow: 0 3px 8px black;
            opacity: 1;
        }

        #title {
            color: white;
            font-weight: 600;
            background-color: rgba(0,0,0,0);
            border: none;
            font-size: 25px;
        }

        #log-out-button,
        #header-buttons {
            font-weight: bold;
        }

        #title:hover {
            text-underline-offset: 17px;
            text-decoration: underline;
            text-decoration-thickness: 1px;
            cursor: pointer;
        }

        
        #header-buttons:hover {
            text-underline-offset: 20px;
            text-decoration: underline;
            cursor: pointer;
        }

        #log-out-button {
            border: none;
            background: none;
            padding-bottom: 7px;
            padding-top: 7px;
            margin-top: 1px;
            text-decoration-color: #212529;
            text-underline-offset: 25px;
        }
        .tooltip-inner {
            max-width: none;
            text-align: left;
        }

        #b_popup {
            width: 10px;
            height: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 5px;
            margin-top: 8px;
            padding-top: 2px;
            padding-right: 11px;
            border-radius: 50%;
            border: none;
            background-color: #ced4da;
            
        }

        #b_popup:hover {
            background-color: #6c757d;
        }

    </style>

</head>

<body>

    <header class="mobile">
        <div class="header">
            <div></div>
            <div>
                <a class="navbar-brand" id="title" asp-area="" asp-page="/Index">MaynTechnologies</a>
            </div>
            <div></div>

            <div>
            </div>
            <div class="popup">
                <button class="btn Button_B" onclick="myFunction()" style="margin-left:25%; height:100%"><i class="fa fa-bars"></i></button>
                <span class="popuptext" id="myPopup" onmouseleave="myFunction()">
                    <a class="nav-link text-dark" id="popup-buttons" asp-area="" asp-page="/Solutions/Valuation">Valuation</a>  <br>
                    <a class="nav-link text-dark" id="popup-buttons" asp-area="" asp-page="/AboutUs">About Us</a> <br>
                    <a class="nav-link text-dark" id="popup-buttons" asp-area="" asp-page="/Privacy">Privacy</a> <br>
                    <span class="text-center"><partial name="LoginStatusPartial" /></a></span>
                </span>
            </div>
        </div>
    </header>

    <header class="desktop">
        <div class="header">
            <div></div>
            <div>
                <a class="navbar-brand" id="title" asp-area="" asp-page="/Index">MaynTechnologies</a>
            </div>
            <div></div>
            <div>
                <a class="nav-link text-dark" id="header-buttons" asp-area="" asp-page="/Solutions/Valuation">Valuation</a>
            </div>
            
            <div>
                <a class="nav-link text-dark" id="header-buttons" asp-area="" asp-page="/AboutUs">About Us</a>
            </div>
            <div></div>
            <div>
                <a class="nav-link text-dark" id="header-buttons" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
            <div class="mr-2">
                <partial name="LoginStatusPartial" />
            </div>
        </div>
    </header>


    <div class="container border" style="padding:20px; padding-top:90px;">

        @if (Model.ErrorMsg.Length > 0)
        {
            <div class="alert alert-warning alert-dismissable fade show" role="alert" id="alert">
                <strong>@Model.ErrorMsg</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else
        {
                
        }
        <h1>
            Analysis
        </h1>

        <form method="post" enctype="multipart/form-data" id="form">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Company Name</label>
                <div class="col-sm-6">
                    <input type="text" id="CompanyName" name="SearchCompany" class="form-select" />
                    <input type="hidden" id="searchCompany" name="Company" />
                </div>
                <button type="button" class="col-sm-1 d-grid btn btn-secondary" id="b_popup" data-toggle="tooltip" data-html="true" title="Please select a public company from any industry (excluding financial services).
Note that the list of companies provided is not exhaustive.">
                    i
                </button>
            </div>

@*            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Number of years</label>
                <div class="col-sm-6">
                    <input class="form-select" asp-for="years.Years" />

                </div>
            </div>*@

            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <button type="submit" class="btn btn-secondary">Confirm</button>

                    <div class="alert alert-warning alert-dismissable fade show" role="alert" id="loader" style="visibility:hidden; display:none">
                        <div class="spinner-border" role="status" id="loader">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>

                <button type="button" class="col-sm-1 d-grid btn btn-secondary" id="b_popup" data-toggle="tooltip" data-html="true" title="The output of this analysis will be delivered in an Excel file format">
                    i
                </button>

            </div>
        </form>
    </div>



</body>